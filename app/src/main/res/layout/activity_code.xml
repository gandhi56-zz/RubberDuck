<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeActivity"
    android:background="@color/LightBlue"
    android:paddingHorizontal="20dp">

    <ProgressBar
        android:id="@+id/loadingProblems"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminateTint="@color/font_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute"
        android:visibility="invisible"
        style="@style/Platform.MaterialComponents.Light"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/problem_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.206">

                <SearchView
                    android:id="@+id/searchView"
                    android:queryHint="Problem ID or name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:iconifiedByDefault="false"
                    android:onClick="initSearch"/>

                <ListView
                    android:id="@+id/searchListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                android:paddingVertical="10dp">

                <Chronometer
                    android:id="@+id/timer_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/skip_btn"
                    android:fontFamily="@font/anaheim"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="5dp"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/problem_name"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/problem_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anaheim"
                    android:text="@string/problem_name"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/problem_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anaheim"
                    android:text="@string/problem_content"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/handle_view"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Yellow">

                    <TextView
                        android:layout_margin="10dp"
                        android:fontFamily="@font/anaheim"
                        android:paddingVertical="10dp"
                        android:text="@string/id"
                        android:textColor="@color/font_color"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/anaheim"
                        android:gravity="center_horizontal"
                        android:paddingVertical="10dp"
                        android:text="@string/verdict"
                        android:textAlignment="center"
                        android:textColor="@color/font_color"
                        android:textSize="18sp" />

                </TableRow>

                <ScrollView
                    android:id="@+id/tableScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableLayout
                        android:id="@+id/submissionsTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:stretchColumns="*" />
                </ScrollView>

            </TableLayout>
        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="92dp"
        android:layout_height="65dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/next_btn"
        android:foreground="@drawable/rightarrow"
        android:foregroundTint="#FFFFFF"
        android:gravity="center_horizontal"
        android:onClick="getProblem"
        android:longClickable="true"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pullToRefresh"
        tools:ignore="ButtonStyle,UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>