<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeActivity"
    android:background="@color/LightBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="66dp"
        app:layout_constraintBottom_toTopOf="@+id/problem_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingProblems"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminateTint="@color/font_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/beginBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:text="@string/start_coding"
        android:background="@drawable/handle_view"
        android:textColor="@color/font_color"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="beginCoding"/>


    <LinearLayout
        android:id="@+id/problem_layout"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="0dp"
            android:paddingVertical="10dp">

            <Chronometer
                android:id="@+id/timer_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:background="@drawable/skip_btn"
                android:textColor="#ffffff"
                android:fontFamily="@font/anaheim"
                android:paddingHorizontal="20dp"/>

            <Button
                android:id="@+id/end_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/end_btn"
                android:text="@string/end"
                android:textColor="@color/font_color"
                android:fontFamily="@font/anaheim"
                android:textSize="28sp"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/problem_name"
            android:paddingHorizontal="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.14"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/problem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/anaheim"
                android:text="@string/problem_name"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/handle_view"
            android:paddingHorizontal="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.14"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/problem_content"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:fontFamily="@font/anaheim"
                android:text="@string/problem_content"
                android:textColor="@color/font_color"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="40dp">

            <Button
                android:id="@+id/skip_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/skip_btn"
                android:onClick="skipProblem"
                android:text="@string/skip"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="ButtonStyle,OnClick" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/submit_btn"
                android:onClick="submitSoln"
                android:text="@string/submit"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>